{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "skipLibCheck": true,
        "sourceMap": true,
        "outDir": "dist",
        "jsx": "react",
        "strictNullChecks": true,
        // linhas requeridas pelo TypeORM
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
    },
    "include": [
        "**/*.ts",
        "**/*.tsx"
    ]
}
